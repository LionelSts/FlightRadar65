<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flightInfos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/flightNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        tools:text="@string/flight_number" />

    <TextView
        android:id="@+id/flightNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/flight_no_string" />

    <TextView
        android:id="@+id/departureTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="20dp"
        tools:text="@string/departure_icao" />

    <TextView
        android:id="@+id/departureString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        tools:text="@string/departure_icao_string" />

    <TextView
        android:id="@+id/airlineIcao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        tools:text="@string/airline_icao" />

    <TextView
        android:id="@+id/airlineIcaoString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        tools:text="@string/airline_icao_string" />

    <TextView
        android:id="@+id/arrivalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="20dp"
        tools:text="@string/arrival_icao" />

    <TextView
        android:id="@+id/arrivalTimeString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:layout_marginTop="20dp"
        tools:text="@string/arrival_icao_string" />

    <TextView
        android:id="@+id/airframe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="65dp"
        tools:text="@string/airplane_icao" />

    <TextView
        android:id="@+id/airframeString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        tools:text="@string/airplane_icao_string" />

    <TextView
        android:id="@+id/altitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginTop="40dp"
        tools:text="@string/altitude" />

    <TextView
        android:id="@+id/altitudeString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:layout_marginTop="40dp"
        tools:text="@string/altitude_string" />

    <ImageView
        android:id="@+id/imageViewAirline"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="265dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/ic_baseline_airplanemode_active_24"
        android:contentDescription="@string/airline_logo" />


</FrameLayout>